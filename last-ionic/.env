# Application domain (used to set the base domain of the app)
REACT_APP_NAME=Festivore

# Application domain (used to set the base domain of the app)
REACT_APP_DOMAIN=localhost

REACT_APP_COOKIE_PATH=/

# API host URL (in production, switch this to the server URL)
REACT_APP_HOST_URL=http://localhost:3000

# API protocol (HTTP or HTTPS)
REACT_APP_PROTOCOL=http

# API port where the backend (Strapi, etc.) runs
REACT_APP_API_PORT=1337

# Complete API URL (constructed dynamically using protocol, host, and port)
REACT_APP_API_URL=${REACT_APP_PROTOCOL}://localhost:${REACT_APP_API_PORT}

# Testing environment flag (set to false in production)
REACT_APP_TESTING=false

# Default language for i18next (internationalization)
REACT_APP_DEFAULT_LANG=en

# Supported languages for i18next (comma-separated list of language codes)
REACT_APP_SUPPORTED_LANGS=en,es

# Default path to redirect after login
REACT_APP_HOME_PATH=/login

# Google Analytics 4 (GA4) Tracking ID
REACT_APP_GA4_TRACKING_ID=YOUR_GA4_TRACKING_ID

REACT_APP_SQLITE_PATH=./default-database.db

REACT_APP_CAPTCHA_EXPIRY_TIME=300000

REACT_APP_CAPTCHA_CLEANUP_INTERVAL=60000 

REACT_APP_CRM_API_URL=${REACT_APP_PROTOCOL}://localhost:${REACT_APP_API_PORT}

REACT_APP_STORAGE_KEY='app'

REACT_APP_SHOW_PWA_INSTALLER=true