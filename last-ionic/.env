# =============================
# Application Configuration
# =============================

# Application name to be used throughout the app
VITE_APP_NAME=Festivore

# Application domain (used to set the base domain of the app)
VITE_DOMAIN=localhost

# Cookie path to be used for authentication or other purposes
VITE_COOKIE_PATH=/

# Storage key for local storage or session storage
VITE_STORAGE_KEY=app

# =============================
# API Configuration
# =============================

# API host URL (for local development or production server)
VITE_HOST_URL=http://localhost:3000

# API protocol (either HTTP or HTTPS)
VITE_PROTOCOL=http

# API port where the backend (e.g., Strapi) runs
VITE_API_PORT=1337

# =============================
# Google Analytics
# =============================

# Google Analytics 4 (GA4) Tracking ID for analytics
VITE_GA4_TRACKING_ID=YOUR_GA4_TRACKING_ID

# =============================
# Internationalization (i18n)
# =============================

# Default language for the application (used in i18next)
VITE_DEFAULT_LANG=en

# Supported languages for the application (comma-separated list of language codes)
VITE_SUPPORTED_LANGS=en,es

# =============================
# Authentication and Security
# =============================

# Default path to redirect after login
VITE_HOME_PATH=/login

# CAPTCHA configuration (expiry time and cleanup interval in milliseconds)
VITE_CAPTCHA_EXPIRY_TIME=300000
VITE_CAPTCHA_CLEANUP_INTERVAL=60000 

# Toggle to enable/disable CAPTCHA in the application
VITE_ENABLE_CAPTCHA=false

# =============================
# Feature Toggles
# =============================

# Flag to indicate if the app is in a testing environment
VITE_TESTING=false

# Flag to show PWA installer for Progressive Web App support
VITE_SHOW_PWA_INSTALLER=true

# =============================
# Database Configuration
# =============================

# Path to the SQLite database (used for local database storage)
VITE_SQLITE_PATH=./default-database.db
