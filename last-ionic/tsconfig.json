{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "useDefineForClassFields": true,
    "allowJs": true,
    "rootDir": "./",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*", "src/components/*"],
      "@models/*": ["src/classes/strapi/models/*"],
      "@utils/*": ["src/classes/utils/*"],
      "@form/*": ["src/components/main/Form/*"],
      "@stores/*": ["src/integrations/stores/*"],
      "@validations/*": ["src/classes/strapi/validations/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.tsx", "types/globals.d.ts", "src/index.tsx"],
  "exclude": ["node_modules"]
}
